<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.gc.dataset.User" table="hoyi_user">
		<id name="id" column="id" type="java.lang.Long">
			<generator class="sequence">
			 	<param name="sequence">SEQ_ID</param>
			</generator>
		</id>
		<property name="name" column="name" type="string" length="50"></property>
		<property name="skill" column="skill" type="string" length="100"></property>
		<property name="createTime" column="create_time" type="timestamp"></property>
	</class>
</hibernate-mapping>